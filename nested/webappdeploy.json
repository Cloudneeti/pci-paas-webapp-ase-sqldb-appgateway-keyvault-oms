{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "aadLoginUser": {
      "type": "string",
      "metadata": {
        "description": "The account name to use for the application's connections to the database server (low-privileged)."
      }
    },
    "aadLoginPassword": {
      "type": "securestring",
      "metadata": {
        "description": "The password to use for the application's connections to the database server."
      }
    },
    "siteName": {
      "type": "string",
      "metadata": {
        "description": "Website Name"
      }
    },
    "location": {
      "type": "string",
      "metadata": {
        "description": "The Azure region in which these resources will be deployed."
      }
    },
    "clientId": {
      "type": "string",
      "metadata": {
        "description": "The application ID within AAD; See the Generate Application ID and Secret Step in the readme"
      }
    },
    "activeDirectoryAppSecret": {
      "type": "securestring",
      "metadata": {
        "description": "The application's secret to allow access to AKV"
      }
    },
    "aseName": {
      "type": "string"
    },
    "tagValues": {
      "type": "object"
    },
    "storageAccountDiagnostics": {
      "type": "string"
    },
    "packageURI": {
      "type": "string"
    },
    "customHostName": {
      "type": "string",
      "metadata": {
        "description": "Custom Host Name"
      }
    },
    "pricingTier": {
      "type": "string",
      "allowedValues": [
        "1",
        "2",
        "3"
      ],
      "defaultValue": "1",
      "metadata": {
        "description": "Defines pricing tier for workers: 1 = Isolated 1, 2 = Isolated 2, 3 = Isolated 3."
      }
    },
    "capacity": {
      "type": "int",
      "defaultValue": 1,
      "metadata": {
        "description": "Defines the number of instances that will be allocated to the app service plan."
      }
    }
  },
  "variables": {
    "defaultSqlServerName": "[concat('sqlserver-', uniqueString(resourceGroup().id))]",
    "defaultSqlDatabaseName": "ContosoPayments",
    "defaultAppServicePlanName": "[concat('contosoplan', uniqueString(resourceGroup().id))]"
  },
  "resources": [
    {
      "apiVersion": "2015-08-01",
      "name": "[variables('defaultAppServicePlanName')]",
      "type": "Microsoft.Web/serverfarms",
      "location": "[parameters('location')]",
      "properties": {
        "name": "[variables('defaultAppServicePlanName')]",
        "hostingEnvironmentProfile": {
          "id": "[resourceId('Microsoft.Web/hostingEnvironments',parameters('aseName'))]"
        }
      },
      "sku": {
        "name": "[concat('I',parameters('pricingTier'))]",
        "tier": "Isolated",
        "size": "[concat('I',parameters('pricingTier'))]",
        "family": "I",
        "capacity": "[parameters('capacity')]"
      }
    },
    {
      "apiVersion": "2015-08-01",
      "name": "[parameters('siteName')]",
      "type": "Microsoft.Web/sites",
      "location": "[parameters('location')]",
      "dependsOn": [
        "[concat('Microsoft.Web/serverfarms/', variables('defaultAppServicePlanName'))]"
      ],
      "tags": {
        "[concat('hidden-related:', resourceId('Microsoft.Web/serverfarms', variables('defaultAppServicePlanName')))]": "empty",
        "displayName": "Website",
        "layer": "front-end",
        "environment": "[parameters('tagValues').environment]",
        "projectname": "[parameters('tagValues').projectname]",
        "dataprofile": "[parameters('tagValues').dataprofile]",
        "department": "[parameters('tagValues').department]",
        "businessUnit": "[parameters('tagValues').businessUnit]"
      },
      "properties": {
        "name": "[parameters('siteName')]",
        "serverFarmId": "[variables('defaultAppServicePlanName')]",
        "siteConfig": {
          "AlwaysOn": false
        },
        "clientAffinityEnabled": false,
        "hostingEnvironmentProfile": {
          "id": "[resourceId('Microsoft.Web/hostingEnvironments', parameters('aseName'))]"
        }
      },
      "resources": [
        {
          "apiVersion": "2015-08-01",
          "type": "config",
          "name": "connectionstrings",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('siteName'))]"
          ],
          "properties": {
            "DefaultConnection": {
              "value": "[concat('Data Source=tcp:', variables('defaultSqlServerName'), '.database.windows.net,1433;Initial Catalog=', variables('defaultSqlDatabaseName'), ';User Id=', parameters('aadLoginUser'), ';Password=', parameters('aadLoginPassword'), ';Authentication=Active Directory Password;Column Encryption Setting=Enabled;Encrypt=True;TrustServerCertificate=False;Connection Timeout=300;')]",
              "type": "SQLAzure"
            }
          }
        },
        {
          "apiVersion": "2015-08-01",
          "type": "config",
          "name": "logs",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('siteName'))]"
          ],
          "tags": {
            "displayName": "LogConfig"
          },
          "properties": {
            "applicationLogs": {
              "fileSystem": {
                "level": "Error"
              },
              "azureTableStorage": {
                "level": "Off",
                "sasUrl": null
              },
              "azureBlobStorage": {
                "level": "Verbose",
                "sasUrl": "[concat('http://',parameters('storageAccountDiagnostics'),'.blob.core.windows.net/')]",
                "retentionInDays": null
              }
            },
            "httpLogs": {
              "fileSystem": {
                "retentionInMb": 35,
                "retentionInDays": null,
                "enabled": false
              },
              "azureBlobStorage": {
                "sasUrl": "[concat('http://',parameters('storageAccountDiagnostics'),'.blob.core.windows.net/')]",
                "retentionInDays": null,
                "enabled": true
              }
            },
            "failedRequestsTracing": {
              "enabled": true
            },
            "detailedErrorMessages": {
              "enabled": true
            }
          }
        },
        {
          "type": "microsoft.insights/components",
          "name": "[parameters('siteName')]",
          "apiVersion": "2014-04-01",
          "location": "South Central US",
          "tags": {
            "[concat('hidden-link:', resourceGroup().id, '/providers/Microsoft.Web/sites/', parameters('siteName'))]": "Resource"
          },
          "properties": {
            "ApplicationId": "[parameters('siteName')]",
            "Request_Source": "IbizaWebAppExtensionCreate"
          },
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('siteName'))]"
          ]
        },
        {
          "name": "MSDeploy",
          "type": "extensions",
          "location": "[parameters('location')]",
          "apiVersion": "2015-08-01",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('siteName'))]",
            "connectionstrings",
            "logs"
          ],
          "tags": {
            "displayName": "WebAppMSDeploy"
          },
          "properties": {
            "packageUri": "[parameters('packageURI')]"
          }
        },
        {
          "apiVersion": "2015-08-01",
          "type": "Microsoft.Web/sites/hostNameBindings",
          "name": "[concat(parameters('siteName'), '/',parameters('customHostName'))]",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('siteName'))]",
            "MSDeploy"
          ],
          "properties": {
            "siteName": "[parameters('siteName')]"
          }
        },
        {
          "apiVersion": "2015-08-01",
          "type": "Microsoft.Web/sites/hostNameBindings",
          "name": "[concat(parameters('siteName'), '/', 'www.',parameters('customHostName'))]",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('siteName'))]",
            "[resourceId('Microsoft.Web/sites/hostNameBindings', parameters('siteName'), parameters('customHostName'))]",
            "MSDeploy"
          ],
          "properties": {
            "siteName": "[parameters('siteName')]"
          }
        },

        {
          "apiVersion": "2015-08-01",
          "type": "config",
          "name": "appsettings",
          "dependsOn": [
            "[concat('Microsoft.Web/sites/', parameters('siteName'))]",
            "MSDeploy"
          ],
          "properties": {
            "applicationADID": "[parameters('clientId')]",
            "applicationADSecret": "[parameters('activeDirectoryAppSecret')]"
          }
        }
      ]
    }
  ]
}