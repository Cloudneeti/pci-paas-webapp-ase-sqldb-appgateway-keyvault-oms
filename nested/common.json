{
  "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "keyVaultName": {
      "type": "string",
      "metadata": {
        "description": "Name of the Key Vault"
      }
    },
    "vaultSku": {
      "type": "string",
      "defaultValue": "Standard",
      "allowedValues": [
        "Standard",
        "Premium"
      ],
      "metadata": {
        "description": "SKU for the vault"
      }
    },
    "enabledForDeployment": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Specifies if the vault is enabled for VM or Service Fabric deployment"
      }
    },
    "enabledForTemplateDeployment": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Specifies if the vault is enabled for ARM template deployment"
      }
    },
    "enabledForDiskEncryption": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Specifies if the vault is enabled for volume encryption"
      }
    },
    "enableSoftDelete": {
      "type": "bool",
      "defaultValue": true,
      "metadata": {
        "description": "Specifies if the vault is enabled for soft delete"
      }
    },    
    "storageAccountName": {
      "type": "string"
    },
    "omsWorkspaceName": {
      "type": "string",
      "metadata": {
        "description": "Provide the OMS Workspace name."
      }
    },
    "tagValues": {
      "type": "object"
    },
    "applicationObjectId": {
      "type": "string"
    },
    "applicationClientId": {
      "type": "string"
    },    
    "retentionPolicy": {
      "type": "int",
      "defaultValue": 2,
      "metadata": {
        "description": "Number of days of Retention Policy"
      }
    }
  },
  "variables": {
    "apiVersion": "2016-01-01"
  },
  "resources": [
    {
      "comments": "----DIAGNOSTICS STORAGE ACCOUNT-----",
      "type": "Microsoft.Storage/storageAccounts",
      "apiVersion": "[variables('apiVersion')]",
      "name": "[parameters('storageAccountName')]",
      "location": "[resourceGroup().location]",
      "kind": "Storage",
      "sku": {
        "name": "Standard_LRS"
      },
      "tags": {
        "layer": "management",
        "environment": "[parameters('tagValues').environment]",
        "projectname": "[parameters('tagValues').projectname]",
        "dataprofile": "[parameters('tagValues').dataprofile]",
        "department": "[parameters('tagValues').department]",
        "businessUnit": "[parameters('tagValues').businessUnit]"
      },
      "properties": {
        "mode": "Incremental",
        "encryption": {
          "keySource": "Microsoft.Storage",
          "services": {
            "blob": {
              "enabled": true
            }
          }
        }
      }
    },
    {
      "name": "[parameters('keyVaultName')]",
      "type": "Microsoft.KeyVault/vaults",
      "apiVersion": "2016-10-01",
      "location": "[resourceGroup().location]",
      "tags": {
          "layer": "management",
          "environment": "[parameters('tagValues').environment]",
          "projectname": "[parameters('tagValues').projectname]",
          "dataprofile": "[parameters('tagValues').dataprofile]",
          "department": "[parameters('tagValues').department]",
          "businessUnit": "[parameters('tagValues').businessUnit]"
      },
      "properties": {
        "tenantId": "[subscription().TenantId]",
        "sku": {
          "family": "A",
          "name": "[parameters('vaultSku')]"
        },
        "accessPolicies": [
          {
            "tenantId": "[subscription().TenantId]",
            "objectId": "[parameters('applicationObjectId')]",
            "applicationId": "[parameters('applicationClientId')]",
            "permissions": {
              "keys": [
                "encrypt",
                "decrypt",
                "wrapKey",
                "unwrapKey",
                "sign",
                "verify",
                "get",
                "list",
                "create",
                "update",
                "import",
                "delete",
                "backup",
                "restore"
              ],
              "secrets": [
                "get",
                "list",
                "set",
                "delete"
              ],
              "certificates": [
                "get",
                "list",
                "delete",
                "create",
                "import",
                "update",
                "managecontacts",
                "getissuers",
                "listissuers",
                "setissuers",
                "deleteissuers",
                "manageissuers",
                "recover",
                "purge"
              ]
            }
          }
        ],
        "enabledForDeployment": "[parameters('enabledForDeployment')]",
        "enabledForDiskEncryption": "[parameters('enabledForDiskEncryption')]",
        "enabledForTemplateDeployment": "[parameters('enabledForTemplateDeployment')]",
        "enableSoftDelete": "[parameters('enableSoftDelete')]",
        "createMode": "Incremental"
      },
      "resources": [
        {
          "type": "providers/diagnosticSettings",
          "name": "Microsoft.Insights/service",
          "dependsOn": [
            "[resourceId('Microsoft.KeyVault/vaults', parameters('keyVaultName'))]"
          ],
          "apiVersion": "2016-09-01",
          "properties": {
            "workspaceId": "[resourceId('Microsoft.OperationalInsights/workspaces', parameters('omsWorkspaceName'))]",
            "storageAccountId": "[resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName'))]",
            "logs": [
              {
                "category": "AuditEvent",
                "enabled": true,
                "retentionPolicy": {
                  "days": "[parameters('retentionPolicy')]",
                  "enabled": true
                }
              }
            ]
          }
        }
      ]  
    }
  ],
  "outputs": {
    "diagnosticsStorageAccountKey": {
      "type": "string",
      "value": "[listKeys(resourceId('Microsoft.Storage/storageAccounts', parameters('storageAccountName')), variables('apiVersion')).keys[0].value]"
    }
  }
}
